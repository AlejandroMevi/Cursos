<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:stretchColumns="1"
    android:shrinkColumns="2"
    tools:context=".udemyCursos.TableLayoutFragment">

    <TableRow android:background="#3F51B5">

        <TextView
            android:layout_column="0"
            android:padding="5dp"
            android:text="Artículo"
            android:textColor="@android:color/white" />

        <TextView
            android:layout_column="2"
            android:padding="5dp"
            android:text="Precio"
            android:textColor="@android:color/white" />
    </TableRow>
    <TableRow>

        <TextView
            android:layout_column="0"
            android:padding="5dp"
            android:text="2Kg de Naranjas" />

        <TextView
            android:layout_column="2"
            android:padding="5dp"
            android:text="1.50€"
            android:textAlignment="textEnd" />
    </TableRow>

    <TableRow>

        <TextView
            android:layout_column="0"
            android:padding="5dp"
            android:text="3 Tortillas de Patatas" />

        <TextView
            android:layout_column="2"
            android:padding="5dp"
            android:text="6.84€"
            android:textAlignment="textEnd"/>
    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:padding="5dp"
            android:text="5 Shushi" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:padding="5dp"
            android:textAlignment="textEnd"
            android:text="15.00€" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="0"
            android:padding="5dp"
            android:text="1 Cepillo de dientes" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:textAlignment="textEnd"
            android:padding="5dp"
            android:text="2.70€" />
    </TableRow>
    <View
        android:layout_height="2dp"
        android:background="#ACACCC" />

    <TableRow>

        <TextView
            android:layout_column="1"
            android:padding="5dp"
            android:text="Subtotal"
            android:textColor="#3F51B5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:textAlignment="textEnd"
            android:padding="5dp"
            android:text="26.04€" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:padding="5dp"
            android:text="Cupón de Descuento 15%"
            android:textColor="#3F51B5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:textAlignment="textEnd"
            android:padding="5dp"
            android:text="-3.91" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:padding="5dp"
            android:text="Costo envío"
            android:textColor="#3F51B5" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:textAlignment="textEnd"
            android:padding="5dp"
            android:text="3.00€" />
    </TableRow>
    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="1"
            android:padding="5dp"
            android:text="Total"
            android:background="#3F51B5"
            android:textColor="@color/white" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_column="2"
            android:background="#3F51B5"
            android:textColor="@color/white"
            android:textAlignment="textEnd"
            android:padding="5dp"
            android:text="25.13€" />
    </TableRow>


</TableLayout>